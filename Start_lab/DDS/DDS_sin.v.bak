module DDS_sin(clk,             //内部时钟
               sclk,            //TLC5615 sclk时钟脚
               din,             //TLC5615 din数据脚
               cs,              //TLC5615 cs片选
              );
input      clk;
output     din;
output     cs;
output     sclk;

wire clk;
wire [9:0] data_line;

  DDS     u4(.clk(clk),.dds_data_out(data_line));
  TLC5615 U5(.clk(clk),.sclk(sclk),.din(din),.cs(cs),.din_in(data_line));
  
endmodule
